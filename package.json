{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/terriajs",
      "packages/cesium",
      "packages/terriajs-server",
      "packages/plugin-sample"
    ],
    "nohoist": [
      "**/husky"
    ]
  },
  "name": "terriajs-map",
  "version": "0.4.2",
  "description": "Geospatial catalog explorer based on TerriaJS.",
  "license": "Apache-2.0",
  "engines": {
    "node": "20.19.3",
    "npm": "10.8.2"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/TerriaJS/TerriaMap"
  },
  "dependencies": {
    "ajv": "6.12.6",
    "ajv-keywords": "3.5.2",
    "terriajs-server": "^4.0.2"
  },
  "config": {
    "docker": {
      "name": "terriamap",
      "include": "wwwroot node_modules serverconfig.json index.js package.json version.js",
      "dockerfile": "deploy/docker/Dockerfile"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "babel-loader": "^9.2.1",
    "css-loader": "^7.1.2",
    "del": "^8.0.0",
    "ejs": "^3.1.10",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "fetch-mock": "^11.1.5",
    "fork-ts-checker-notifier-webpack-plugin": "^9.0.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "fs-extra": "^7.0.1",
    "gh-pages": "^6.3.0",
    "gulp": "^5.0.1",
    "gulp-eslint": "^6.0.0",
    "husky": "^8.0.3",
    "is-subdir": "^1.2.0",
    "json5": "^2.1.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "node-notifier": "^10.0.1",
    "plugin-error": "^2.0.1",
    "prettier": "3.0.0",
    "pretty-quick": "^4.2.2",
    "prop-types": "^15.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.3",
    "style-loader": "^4.0.0",
    "svg-sprite-loader": "^6.0.11",
    "terriajs": "8.10.0",
    "terriajs-cesium": "8.0.2",
    "terriajs-plugin-api": "0.0.1-alpha.17",
    "terriajs-plugin-sample": "0.0.1-alpha.7",
    "typescript": "^5.7.3",
    "urijs": "^1.18.12",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0",
    "yargs": "^17.7.2"
  },
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "start": "terriajs-server --config-file devserverconfig.json",
    "lint": "gulp lint",
    "build": "gulp build",
    "release": "gulp release",
    "dev": "gulp dev",
    "deploy": "gh-pages -d wwwroot",
    "postinstall": "echo 'âœ… Run `npm run build` then `npm run deploy` to publish to GitHub Pages'",
    "prepare": "husky install",
    "docker-build-local": "node deploy/docker/create-docker-context.js --build --push --tag auto --local",
    "docker-build-prod": "node deploy/docker/create-docker-context.js --build --push --tag auto --repository=ghcr.io/terriajs",
    "docker-build-ci": "node deploy/docker/create-docker-context.js --build",
    "hot": "webpack-dev-server --inline --config buildprocess/webpack.config.hot.js --hot --host 0.0.0.0",
    "prettier": "prettier --write .",
    "prettier-check": "prettier --check ."
  },
  "overrides": {
    "ajv": "6.12.6",
    "ajv-keywords": "3.5.2",
    "@types/react": "18.3.23",
    "@types/react-dom": "18.3.7",
    "@types/css-font-loading-module": "0.0.7",
    "@types/lodash": "4.14.182",
    "@types/node": "22.13.1"
  }
}
