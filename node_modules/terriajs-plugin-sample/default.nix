with import <nixpkgs> {};
stdenv.mkDerivation rec {
  name = "terriajs";
  env = buildEnv { name = name; paths = buildInputs; };
  buildInputs = with pkgs; [
    nodejs
    gdal
    yarn
    chromium
  ];

  shellHook = "
    export PATH=$PWD/node_modules/.bin:$(yarn global bin):$PATH
    export NODE_OPTIONS=--max-old-space-size=8192
  ";
}
